%article.video
  .container
    .row
      .video_large_cover.col-sm-7.col-sm-offset-1
        = image_tag @video.large_cover_url
      .video_info.col-sm-3
        %header
          %h3= @video.title
          %span= proper_rating(@video.average_rating)
        %p= @video.description
        .actions
          %a.btn.btn-primary(href="") Watch Now
          %a.btn.btn-default(href="") + My Queue

%section.reviews.container
  .row
    .col-sm-10.col-sm-offset-1
      %header
        %h3= "User Reviews: (#{@reviews.count}) "
      %ul
        %article.review
          - @reviews.each do |review|
            %li.row
              .col-sm-3
                %span= "Rating: #{review.rating}"
                %p= "by #{review.creator.full_name}" #TODO make this a link to user page
              .col-sm-8.col-sm-offset-1
                %p= review.body
