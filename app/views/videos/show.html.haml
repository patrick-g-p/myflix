%article.video
  .container
    .row
      .video_large_cover.col-sm-7.col-sm-offset-1
        = image_tag @video.large_cover_url
      .video_info.col-sm-3
        %header
          %h3= @video.title
          %span= proper_rating(@video.average_rating)
        %p= @video.description
        .actions
          %a.btn.btn-primary(href="") Watch Now
          - if !current_user.video_in_queue?(@video)
            = link_to 'Add to Queue', queue_items_path(video_id: @video.id), method: 'post', class: 'btn btn-default'

%section.reviews.container
  .row
    .col-sm-10.col-sm-offset-1
      - unless already_reviewed?(@video, current_user)
        = bootstrap_form_for([@video, Review.new]) do |f|
          %fieldset
            .form-group
              = f.label "Rate this video:"
              .row
                .col-sm-3
                  = f.select :rating, options_for_select([5,4,3,2,1]), hide_label: true
            .form-group
              = f.label "Write a review:"
              .row
                .col-sm-8
                  = f.text_area :body, rows: 6, class: 'span6', hide_label: true
          %fieldset.form-group.actions.clearfix
            = f.submit 'Submit Review', class: 'btn btn-success'
      %header
        %h3= "User Reviews: (#{@reviews.count}) "
      %ul
        %article.review
          - @reviews.each do |review|
            %li.row
              .col-sm-3
                %span= "Rating: #{review.rating}"
                %p= review_author(review) #TODO make this a link to user page
              .col-sm-8.col-sm-offset-1
                %p= review.body
